.mx-auto.w-full{ class: "md:w-2/3" }
  %h1.font-bold.text-4xl.mb-6 Update project

  = render "form", project: @project

  .bg-white.rounded-lg.shadow.p-6.mb-6.mt-6
    %h2.text-2xl.font-semibold.mb-4 Public Share Link

    - if @project.public_token
      %p.text-gray-700.mb-2
        Public link:
        %a.text-blue-600.hover:underline{ href: public_public_project_url(@project.public_token), target: "_blank" }
          = public_public_project_url(@project.public_token)

      .flex.space-x-4.mt-4
        = link_to "Regenerate Link", regenerate_public_token_project_path(@project), method: :post, class: "px-4 py-2 bg-yellow-400 hover:bg-yellow-500 text-white font-semibold rounded-lg"
        = link_to "Disable Link", disable_public_token_project_path(@project), method: :post, data: { confirm: "Are you sure?" }, class: "px-4 py-2 bg-red-500 hover:bg-red-600 text-white font-semibold rounded-lg"
    - else
      = link_to "Generate Public Link", generate_public_token_project_path(@project), method: :post, class: "px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg"

  .bg-white.rounded-lg.shadow.p-6.mb-6.mt-6
    %h2.text-2xl.font-semibold.mb-4 Secret Token

    - if @project.secret_token
      %p.text-gray-700.mb-2
        Secret token:
        %span.font-mono.bg-gray-100.px-2.py-1.rounded
          = @project.secret_token

      .flex.space-x-4.mt-4
        = link_to "Regenerate Token", regenerate_secret_token_project_path(@project), method: :post, class: "px-4 py-2 bg-yellow-400 hover:bg-yellow-500 text-white font-semibold rounded-lg"
    - else
      = link_to "Generate Secret Token", generate_secret_token_project_path(@project), method: :post, class: "px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg"

= link_to "Back to projects", projects_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium mb-4"
