:css
  .fog-link {
    position: relative;
    display: inline-block;
  }

  .fog-link img {
    display: block;
  }

  /* üü¢ Fog is always visible */
  .fog-link::before {
    content: '';
    position: absolute;
    inset: 0;
    background: rgba(255, 255, 255, 0.35);
    backdrop-filter: blur(4px);
    opacity: 1; /* <- permanent fog */
    transition: none;
  }

  .fog-link span {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    color: black;
    font-size: 1.25rem;
    font-weight: 600;
    pointer-events: none;
    opacity: 1; /* <- always visible text */
    transition: none;
  }
